<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.ChangeAccountDetails">
    <Grid>

        <Grid.RowDefinitions>

            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />

        </Grid.RowDefinitions>
        <ScrollView>
        <VerticalStackLayout Grid.Row="0" Spacing="25" Padding="20,0" HorizontalOptions="Center" VerticalOptions="Start">


            
          
                <Label
                    Text="Редактирование данных"
                    FontSize="40"
                    HorizontalOptions="Center"
                    VerticalOptions="Start" />

                <Entry
                    x:Name="EmailBtn"
                    Placeholder="Ваша почта" />

                <Entry
                    x:Name="PasswordBtn"
                    Placeholder="Введите пароль"/>
			<Label
							   Text="PIN-код"
							   FontSize="15"
							   HorizontalOptions="Center"
							   VerticalOptions="Start" />
                <Entry
                    x:Name="PinCodeBtn"
                    WidthRequest="50"
                    FontSize="22"
                    MaxLength="4"
                    Keyboard="Numeric"/>

                <Frame
                CornerRadius="30"
                Padding="5"
                HasShadow="True"
                HeightRequest="53"
                WidthRequest="170">
                    <Button
                    x:Name="RenameBtn"
                    Text="Изменить"
                    Clicked="RenameData"
                    WidthRequest="100"
                    FontAttributes="Bold"
                    CornerRadius="30"
                    Margin="0,10"
                        BackgroundColor="Transparent"
                    FontSize="18" />
                    </Frame>

                        <Label
                x:Name="returns"
                Text="Вернуться назад"
                FontSize="20"
                 FontAttributes="Bold"
                HorizontalOptions="Center"
                VerticalOptions="End"
                Margin="0,10">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnGoBackTapped" />
                    </Label.GestureRecognizers>
                </Label>
                    
            </VerticalStackLayout>
       
           




            </ScrollView>
    </Grid>
</ContentPage>